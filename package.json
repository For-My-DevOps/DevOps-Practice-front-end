{
  "name": "mogambo-front-end",
  "version": "0.1.0",
  "description": "Front end for mogambo application.",
  "type": "module",
  "main": "server.js",
  "config": {
    "service": "FRONTEND",
    "service_short": "frontend",
    "reporter": "jslint",
    "distribution": "./distribution",
    "build": "./distribution/build"
  },
  "scripts": {
    "test": "nyc mocha -- test/*_test.js test/api/*_test.js",
    "coverage": "nyc --reporter=cobertura mocha -- test/*_test.js test/api/*_test.js",
    "start": "node server.js",
    "clean": "rimraf $npm_package_config_distribution && mkdirp $npm_package_config_build",
    "build": "npm run clean && npm run copy",
    "copy": "cp -R -L ./node_modules ./public ./*.json ./helpers ./api ./test ./scripts ./*.js $npm_package_config_build",
    "package": "npm run build && cd $npm_package_config_build && zip -r ../$npm_package_config_service_short-$npm_package_version.zip ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udbc/front-end"
  },
  "contributors": [
    "Ian Crosby <ian.daniel.crosby@gmail.com>",
    "Carlos Le√≥n <mail@carlosleon.info> (carlosleon.info)",
    "Gourav SHah <gouravshah@initcron.org>"
  ],
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.0.3",
    "async": "^3.2.6",
    "axios": "^1.5.0",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "finalhandler": "^1.3.1",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "serve-static": "^1.16.2",
    "supertest": "^7.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "chai": "^5.1.1",
    "chai-http": "^5.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.50.0",
    "faker": "^5.5.3",
    "mkdirp": "^3.0.0",
    "mocha": "^10.7.0",
    "mocha-junit-reporter": "^2.2.1",
    "mongodb": "^6.9.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^4.0.0",
    "should": "^13.2.1",
    "sinon": "^19.0.2"
  },
  "nyc": {
    "include": [
      "helpers/**/*.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  }
}
